@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" />
}
<div class="auth-page-wrapper">
    <div class="auth-page-container">
        <div class="auth-sidebar">
            <div class="auth-sidebar-content">
                <h1 class="auth-sidebar-title">WorkTrack</h1>
                <p class="auth-sidebar-description">
                    Manage your tasks efficiently and boost your productivity.
                </p>
                <ul class="auth-sidebar-features">
                    <li class="auth-sidebar-feature">Organize tasks by project</li>
                    <li class="auth-sidebar-feature">Track progress in real-time</li>
                    <li class="auth-sidebar-feature">Set deadlines and reminders</li>
                    <li class="auth-sidebar-feature">Collaborate with your team</li>
                </ul>
            </div>
            <div class="auth-sidebar-decoration"></div>
        </div>
        <div class="auth-content">
            <div class="auth-form-wrapper">
        <form class="auth-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="auth-title">Register</h2>
                <p class="auth-subtitle">Create your account to get started</p>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="auth-group">
                    <label asp-for="Input.Name">Name</label>
                    <input asp-for="Input.Name" class="auth-input" autocomplete="username" aria-required="true" placeholder="User Name" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="auth-group">
                        <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <input asp-for="Input.PhoneNumber" class="auth-input" placeholder="98xxxxxxxx" autocomplete="tel" aria-required="true" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            <div class="auth-group">
                        <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="auth-input" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="auth-group">
                        <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="auth-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="auth-group">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="auth-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="auth-button">Register</button>
            <p class="auth-link-text">
                Already have an account?
                        <a style="text-decoration:none" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login Here</a>
            </p>
        </form>
        </div>
    </div>
