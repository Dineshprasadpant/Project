@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Auth.css" />
}
<div class="auth-page-wrapper">
    <div class="auth-page-container">
        @*sidebar*@
        <div class="auth-sidebar">
            <div class="auth-sidebar-content">
                <h1 class="auth-sidebar-title">WorkTrack</h1>
                <p class="auth-sidebar-description">
                    Manage your tasks efficiently and boost your productivity.
                </p>
                <ul class="auth-sidebar-features">
                    <li class="auth-sidebar-feature">Organize tasks by project</li>
                    <li class="auth-sidebar-feature">Track progress in real-time</li>
                    <li class="auth-sidebar-feature">Set deadlines and reminders</li>
                    <li class="auth-sidebar-feature">Collaborate with your team</li>
                </ul>
            </div>
            <div class="auth-sidebar-decoration"></div>
        </div>





        <div class="auth-content">
           
            <div class="auth-form-wrapper">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            <form class="auth-form" id="account" method="post">
                <h2 class="auth-title">Login</h2>
                <p class="auth-subtitle">Enter your credentials to continue</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="auth-group">
                    <label asp-for="Input.Email" class="auth-label">Email</label>
                    <input asp-for="Input.Email" class="auth-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="auth-group">
                    <label asp-for="Input.Password" class="auth-label">Password</label>
                    <input asp-for="Input.Password" class="auth-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="auth-options">
                    <label asp-for="Input.RememberMe" class="auth-checkbox-label">
                        <input class="auth-checkbox" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                        <button id="login-submit" type="submit" class="auth-button">Log in</button>
                </div>
                <div>
                    <p class="auth-link-text">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="auth-link-text">
                            Don't have an account?
                            <button type="button" class="auth-link-button">
                                <a style="text-decoration:none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register  Now</a>
                            </button>
                    </p>
                    <p class="auth-link-text">
                            <a style="text-decoration:none" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
            </div>
    </div>
